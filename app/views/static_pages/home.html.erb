<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>全体ウォール</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>あききよと交流する</h1>

    <h2>
    このページは
      <a href="http://akikiyo.com">あききよ.COM</a>
    の「お問い合わせ」ページです。
    </h2>

    <%= link_to "交流する", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>

<% end %>

